@model SolarEP.Models.checklist_equipamento

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAjax.cshtml";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formeditarcheck" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.id)

    <script>
        $(function () {
            // your code goes here
            $("#bteditarcheck").click(function () {
                texto = $("#texto").val()
                if (texto == "") {
                    alert("É necessário preencher um Checklist");
                    return false;
                }
                else {
                    $("#formeditarcheck").submit();
                }
            });
        });
    </script>

    <div class="form-group">
        <label class="col-md-4 control-label">Código do equipamento(EQFNR)</label>
        <div class="col-sm-6">
            @Html.DropDownList("codigo", String.Empty)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.texto, "Checklist", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.texto, new { @class = "form-control", placeholder = "Checklist" })
            @Html.ValidationMessageFor(model => model.texto)
        </div>
    </div>
}

