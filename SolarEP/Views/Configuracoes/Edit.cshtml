@model SolarEP.Models.configuracao

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAjax.cshtml";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formeditarconfig" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.id)

    <script>
        $(function () {
            // your code goes here
            $("#bteditarconfig").click(function () {
                nome = $("#nome").val()
                valor = $("#valor").val()
                if (nome == "" || valor == "") {
                    alert("É necessário preencher uma Pergunta");
                    return false;
                }
                else {
                    $("#formeditarconfig").submit();
                }
            });
        });
    </script>
   
    <div class="form-group">
        @Html.LabelFor(model => model.nome, "Nome", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.nome, new { @class = "form-control", placeholder = "Nome", @readonly="true" })
            @Html.ValidationMessageFor(model => model.nome)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.valor, "E-mail", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.valor, new { @class = "form-control", placeholder = "E-mail" })
            @Html.ValidationMessageFor(model => model.valor)
        </div>
    </div>

}

