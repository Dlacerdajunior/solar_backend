@model SolarEP.Models.backgrounds

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAjax.cshtml";
}

@using (Html.BeginForm("Edit", "Backgrounds", FormMethod.Post, new { enctype = "multipart/form-data", id = "formeditarbg" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.id)
    @Html.HiddenFor(model => model.url_background)

    <script>
        $(function () {
            // your code goes here
            $("#bteditarbg").click(function () {

                $("#formeditarbg").submit();
            });
        });

    </script>

    <div class="form-group">
        @Html.Label("Upload Background", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="url_background" />
        </div>
    </div>
}

