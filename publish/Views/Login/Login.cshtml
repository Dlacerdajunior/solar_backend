@model SolarEP.Models.administrador

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<!-- start: page -->
<section class="body-sign">
    <div class="center-sign">
        <a href="/" class="logo pull-left">
            <img src="@Url.Content("~/Content/assets/images/Coca-Cola-Solar-Logo.png")" height="55" alt="Porto Admin" />
        </a>

        <div class="panel panel-sign">
            <div class="panel-title-sign mt-xl text-right">
                <h2 class="title text-uppercase text-weight-bold m-none"><i class="fa fa-user mr-xs"></i> Login</h2>
            </div>
            <div class="panel-body">
                <form action="@Url.Content("~/Login/Login")" method="post">
                    <div class="form-group mb-lg">
                        <label>E-mail</label>
                        <div class="input-group input-group-icon">
                            <input name="email" type="text" id="btlogin" class="form-control input-lg" />
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-user"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group mb-lg">
                        <div class="clearfix">
                            <label class="pull-left">Senha</label>

                        </div>
                        <div class="input-group input-group-icon">
                            <input name="senha" type="password" id="btsenha" class="form-control input-lg" />
                            <span class="input-group-addon">
                                <span class="icon icon-lg">
                                    <i class="fa fa-lock"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-8">
                            <a href="/Login/EsqueciSenha" style="color:black">Esqueceu sua senha?</a>                          
                        </div>
                        <div class="col-sm-4 text-right">
                            <input id="btentrar"  value="Entrar" type="submit" class="btn btn-primary" style="background: #f40000; border: none !important;" />
                        </div>
                    </div>

                </form>
            </div>
        </div>

        <p class="text-center text-muted mt-md mb-md">&copy; Copyright 2016. All Rights Reserved.</p>
    </div>
</section>
<!-- end: page -->